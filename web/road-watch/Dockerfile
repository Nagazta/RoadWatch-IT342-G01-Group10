# Build stage
FROM node:20-alpine AS build

# Accept build arguments
ARG VITE_SUPABASE_URL
ARG VITE_SUPABASE_ANON_KEY
ARG VITE_API_BASE_URL
ARG VITE_AUDIT_API_URL
ARG VITE_AUTH_API_URL
ARG VITE_REPORTS_API_URL
ARG VITE_USERS_API_URL
ARG VITE_ENABLE_AUDIT_LOGS
ARG VITE_ENABLE_PDF_EXPORT
ARG VITE_DEBUG_MODE
ARG VITE_LOG_API_CALLS

# Set as environment variables for the build
ENV VITE_SUPABASE_URL=$VITE_SUPABASE_URL
ENV VITE_SUPABASE_ANON_KEY=$VITE_SUPABASE_ANON_KEY
ENV VITE_API_BASE_URL=$VITE_API_BASE_URL
ENV VITE_AUDIT_API_URL=$VITE_AUDIT_API_URL
ENV VITE_AUTH_API_URL=$VITE_AUTH_API_URL
ENV VITE_REPORTS_API_URL=$VITE_REPORTS_API_URL
ENV VITE_USERS_API_URL=$VITE_USERS_API_URL
ENV VITE_ENABLE_AUDIT_LOGS=$VITE_ENABLE_AUDIT_LOGS
ENV VITE_ENABLE_PDF_EXPORT=$VITE_ENABLE_PDF_EXPORT
ENV VITE_DEBUG_MODE=$VITE_DEBUG_MODE
ENV VITE_LOG_API_CALLS=$VITE_LOG_API_CALLS

WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

# Production stage with Nginx
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]